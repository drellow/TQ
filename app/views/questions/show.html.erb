<div class="row container bigbox">
  <div class="span4 left-span-content">
    <% unless @question.nil? %>
      <h1><%= @question.body %></h1>
      <p><%= @question.info %></p>
    <% else %>
      <h1>No question.</h1>
    <% end %>
  </div>

  <div class="span7">

    <% if user_signed_in? %>
      <%= render :partial => 'answers/show' %>
    <% else %>
      <%= render :partial => 'answers/show_logged_out' %>
    <% end %>

  </div>
</div>