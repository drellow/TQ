
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
        <% tq = TqHelper.new_tq %>
        <li class="brand">
           <%= link_to "TQ: #{tq}", '/' %>
        </li>

      <ul class="nav pull-right">


        <li><%= link_to "Scoreboard", scoreboard_path %></li>
				<% if user_signed_in? %>
			  <li class="dropdown">
			    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			      New Comments (<%= unread_comments.count %>)
			      <b class="caret"></b>
			    </a>
			    <ul class="dropdown-menu">
						<% unread_comments.each do | comment | %>
			      	<li><%= link_to "#{comment.user.username} commented on your post", 											answer_path_for_comment(comment) %></li>
						<% end %>
			    </ul>
				</li>        
          <li><%= link_to "Profile",
            edit_user_registration_path %></li>
        <li><%= link_to "About", about_path %></li>        <% end %>
        <% if current_user && current_user.admin? %>
          <li><%= link_to "Admin",
                admin_dashboard_path %></li>
          <li><%= link_to "Todays Question",
                new_question_path %></li>
        <% end %>

        <% if user_signed_in? %>
          <li><%= link_to "Log out", destroy_user_session_path,
                :method => :delete %></li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
          <li><%= link_to "Sign up",
                new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>