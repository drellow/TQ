
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav pull-left">
        <%= link_to "Today's Question", '/' %>

        <% if user_signed_in? %>
          <%= link_to "Users", users_path %>
          <%= link_to "Profile", edit_user_registration_path %>
        <% end %>

        <% if current_user && current_user.admin? && Question.question_posted?%>
          <%= link_to "Post Answers", post_answers_path, :method => :post %>
          <%= link_to "Update Question", new_question_path %>
        <% elsif current_user && current_user.admin? %>
          <%= link_to "Create Question", new_question_path %>
        <% end %>

      </ul>

      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path %>
          <%= link_to "Sign up", new_user_registration_path %>
        <% end %>
      </ul>
    </div>
  </div>
</header>